<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VisitsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:textSize="50px"
        android:textColor="#503C1A"
        android:layout_marginLeft="320px"
        android:text="Список посещений" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVisits"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:padding="10dp"
        android:fastScrollEnabled="true"/>

    <Button
        android:id="@+id/btAddVisit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#503C1A"
        android:layout_marginRight="50px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="60px"
        android:text="Добавить посещение" />

    <Button
        android:id="@+id/btExitMenu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#503C1A"
        android:layout_marginRight="50px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="20px"
        android:text="Назад" />

</LinearLayout>