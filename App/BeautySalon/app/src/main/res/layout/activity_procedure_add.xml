<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProcedureAddActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textColor="#503C1A"
        android:layout_marginLeft="50px"
        android:layout_marginTop="450px"
        android:text="Название:" />

    <EditText
        android:id="@+id/edName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="150px"
        android:layout_marginLeft="50px"
        android:ems="10"
        android:textColor="#918F8B"
        android:text="Стрижка"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textColor="#503C1A"
        android:layout_marginLeft="50px"
        android:layout_marginTop="40px"
        android:text="Стоимость:" />

    <EditText
        android:id="@+id/edPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="150px"
        android:layout_marginLeft="50px"
        android:ems="10"
        android:textColor="#918F8B"
        android:text="1200"
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textColor="#503C1A"
        android:layout_marginLeft="50px"
        android:layout_marginTop="40px"
        android:text="Мастер:" />

    <EditText
        android:id="@+id/edMaster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="150px"
        android:layout_marginLeft="50px"
        android:ems="10"
        android:textColor="#918F8B"
        android:text="Соловьёва Марина"
        android:inputType="textPersonName" />



    <Button
        android:id="@+id/btSave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:layout_marginRight="50px"
        android:text="Добавить процедуру"
        android:textColor="#503C1A" />

    <Button
        android:id="@+id/btExit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#503C1A"
        android:layout_marginRight="50px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="20px"
        android:text="Назад" />
</LinearLayout>